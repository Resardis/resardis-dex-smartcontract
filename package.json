{
  "name": "resardis-smartcontract",
  "version": "0.1.0",
  "description": "Smart contract for Resardis decentralized cryptocurrency exchange",
  "main": "index.js",
  "scripts": {
    "lint": "yarn lint:js && yarn lint:sol",
    "lint:fix": "yarn lint:js:fix",
    "lint:js": "yarn eslint .",
    "lint:js:fix": "yarn eslint . --fix",
    "lint:sol": "yarn solium -d 'contracts/'",
    "lint:sol:fix": "yarn solium -d 'contracts/' --fix",
    "deploy": "truffle migrate --reset --network ganache_local",
    "deploy:loomchain": "truffle migrate --reset --network loom_dapp_chain",
    "deploy:extdev": "bash scripts/deploy_loom.sh --network loom_extdev_plasma_us1",
    "deploy:rinkeby": "truffle migrate --reset --network rinkeby",
    "test": "bash scripts/test.sh --network ganache_local"
  },
  "repository": "https://github.com/kmotoko/resardis-smartcontract.git",
  "author": "None",
  "license": "UNLICENSED",
  "private": true,
  "devDependencies": {
    "bip39": "^3.0.2",
    "bn.js": "^5.0.0",
    "commander": "^4.0.1",
    "eslint": "^6.6.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-mocha-no-only": "^1.1.0",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "ethereumjs-tx": "^2.1.1",
    "ethereumjs-wallet": "^0.6.3",
    "ethlint": "^1.2.5",
    "ganache-cli": "^6.7.0",
    "js-sha256": "^0.9.0",
    "loom-js": "^1.55.0",
    "loom-truffle-provider": "^0.13.0",
    "truffle": "^5.1.0",
    "truffle-privatekey-provider": "^1.3.0",
    "web3": "^1.2.2"
  }
}
